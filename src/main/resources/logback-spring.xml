<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Property for log directory - configurable via LOG_PATH env var -->
    <property name="LOG_DIR" value="${LOG_PATH:-logs}"/>

    <!-- Console Appender - writes to stderr to avoid contaminating stdout in STDIO transport mode -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON Appender for Production (Console) - writes to stderr to avoid contaminating stdout in STDIO transport mode -->
    <appender name="JSON" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>toolName</includeMdcKeyName>
            <includeMdcKeyName>taskCount</includeMdcKeyName>
            <includeMdcKeyName>duration</includeMdcKeyName>
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>eventType</includeMdcKeyName>
            <includeMdcKeyName>category</includeMdcKeyName>
            <includeMdcKeyName>apiKeyHash</includeMdcKeyName>
            <includeMdcKeyName>ipAddress</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- AUDIT Console Appender (for dev debugging) - writes to stderr to avoid contaminating stdout in STDIO transport mode -->
    <appender name="AUDIT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>eventType</includeMdcKeyName>
            <includeMdcKeyName>category</includeMdcKeyName>
            <includeMdcKeyName>apiKeyHash</includeMdcKeyName>
            <includeMdcKeyName>ipAddress</includeMdcKeyName>
            <includeMdcKeyName>toolName</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- AUDIT File Appender with Rolling Policy -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/audit.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>correlationId</includeMdcKeyName>
            <includeMdcKeyName>eventType</includeMdcKeyName>
            <includeMdcKeyName>category</includeMdcKeyName>
            <includeMdcKeyName>apiKeyHash</includeMdcKeyName>
            <includeMdcKeyName>ipAddress</includeMdcKeyName>
            <includeMdcKeyName>toolName</includeMdcKeyName>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with gzip compression -->
            <fileNamePattern>${LOG_DIR}/audit.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap for all archived files -->
            <totalSizeCap>1GB</totalSizeCap>
            <!-- Clean history on startup -->
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
    </appender>

    <!-- Development Profile -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.example.mcptaskserver" level="DEBUG"/>
        <!-- Dev: Write to BOTH file AND console for debugging -->
        <logger name="AUDIT" level="INFO" additivity="false">
            <appender-ref ref="AUDIT_FILE"/>
            <appender-ref ref="AUDIT_CONSOLE"/>
        </logger>
    </springProfile>

    <!-- Production Profile -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="JSON"/>
        </root>
        <logger name="com.example.mcptaskserver" level="INFO"/>
        <!-- Prod: File only for log aggregation -->
        <logger name="AUDIT" level="INFO" additivity="false">
            <appender-ref ref="AUDIT_FILE"/>
        </logger>
    </springProfile>

    <!-- Default (Test) Profile -->
    <springProfile name="!dev &amp; !prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <!-- Test: Console only for test visibility -->
        <logger name="AUDIT" level="INFO" additivity="false">
            <appender-ref ref="AUDIT_CONSOLE"/>
        </logger>
    </springProfile>
</configuration>
